{
	"env": {
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"next/core-web-vitals"
	],
	"rules": {
		"indent": [
			"error",
			4,
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": "off",
		"no-console": "warn",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"space-before-blocks": [
			"error"
		]
	},
	"root": true
}
